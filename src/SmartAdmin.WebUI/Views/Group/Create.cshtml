@model SmartAdmin.WebUI.ViewModels.GroupCreateViewModel

<div class="row">
    <div class="col-xl-6">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Stwórz nowa grupę <span class="fw-300"><i></i></span>
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div class="panel-tag">
                        Tworzysz nową grupę do której będą dołączać zainteresowane osoby
                    </div>

                    @using (Html.BeginForm("Create", "Group", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="form-label" for="Name">Nazwa grupy</label>
                            @Html.TextBoxFor(x => x.Name, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name)
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="Description">Opis grupy</label>
                            @Html.TextAreaFor(x => x.Description, 5, 50, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Description)
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="Tags">#Hashtagi</label>
                            @Html.TextBoxFor(x => x.Tags, "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Tags)
                            <span class="help-block">
                                Wpisz hasztagi oddzielając je przecinkiem
                            </span>
                        </div>

                        <div class="panel-content border-faded border-left-0 border-right-0 border-bottom-0 d-flex flex-row align-items-center">
                            <button class="btn btn-primary ml-auto waves-effect waves-themed" type="submit">Dodaj grupę</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>